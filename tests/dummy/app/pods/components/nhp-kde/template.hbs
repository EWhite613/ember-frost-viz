<!-- Chart element. -->
{{#frost-viz/chart data
  as |chart|
}}

  {{#frost-viz/scope chart
    (hash
      dimensions=(hash
        x=(frost-viz/dimension/linear chart)
        y=(frost-viz/dimension/linear chart)
    ))
    as |scope|
  }}

    {{#frost-viz/transform/cartesian scope
      dataBindings=(hash
        x=(array
          (frost-viz/binding scope.dimensions.x 'histogram.x')
          (frost-viz/binding scope.dimensions.x 'pdf.x')
        )
        y=(array
          (frost-viz/binding scope.dimensions.y 'histogram.y')
          (frost-viz/binding scope.dimensions.y 'pdf.y')
        )
      )
      as |transform dataBindings|
    }}

      {{frost-viz/scale transform dataBindings.x.[0] align="bottom" ticks=model.length}}
      {{frost-viz/scale transform dataBindings.y.[0] align="left" ticks=10 tickLabelFormat=(frost-viz/format/numeric)}}

